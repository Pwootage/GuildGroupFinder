    </Layers> -->
    <Scripts>
      <OnLoad>self:OnLoad()</OnLoad>
      <!-- <OnEvent function="ChallengesFrame_OnEvent" /> -->
      <OnShow>self:OnShow()</OnShow>
      <OnHide>self:OnHide()</OnHide>
    </Scripts>
  </Frame>

  <Frame name="GuildGroupFinder_PlayerFrameTemplate" useParentLevel="true" virtual="true" hidden="true">
    <Anchors>
      <Anchor point="TOPLEFT" x="4" y="4" />
    </Anchors>
    <Size x="50" y="50" />
    <Layers>
      <Layer level="ARTWORK">
        <Texture parentKey="RunesSmall" hidden="false" alpha="0.08" alphaMode="BLEND" atlas="ChallengeMode-Runes-Small" useAtlasSize="true">
          <Anchors>
            <Anchor point="CENTER" x="-1" y="0" />
          </Anchors>
        </Texture>
      </Layer>
    </Layers>
    <Frames>
      <Button name="$parent_button" inherits="UIPanelButtonTemplate" text="Test button">
        <Anchors>
          <Anchor point="TOPLEFT" x="0" y="0" />
        </Anchors>
      </Button>
    </Frames>
